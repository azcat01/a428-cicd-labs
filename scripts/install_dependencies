#!/bin/bash

cd /app

curl -sL https://rpm.nodesource.com/setup_16.x | sudo -E bash -
yum install nodejs -y

if [ -d "../node_modules" ] 
then
  rm -rf "../node_modules"
fi

if [ -f "../package-lock.json" ]
then
  rm "../package-lock.json"
fi

npm cache clean --force
npm set progress=false
npm install
npm install pm2 -g